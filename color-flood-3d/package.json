    "@radix-ui/react-tooltip": "^1.2.7",
    "@radix-ui/themes": "^3.2.1",
    "@react-spring/three": "^10.0.1",
    "@react-three/drei": "^10.4.2",
    "@react-three/fiber": "^9.2.0",
    "clsx": "^2.1.1",
    "immer": "^10.1.1",
    "lucide-react": "^0.525.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.3",
    "three": "^0.178.0",
    "zustand": "^5.0.6"
